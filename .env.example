# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# Email Configuration (for contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=your_email@gmail.com

# Admin Authentication
# Important: This value MUST match your admin folder name in app/
# Default is 'admin' - change both folder name AND this value for better security
ADMIN_ROUTE_SECRET=admin
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password

# Admin IP Whitelist (Optional - Leave empty to allow all IPs)
# Format: Single IP or comma-separated list
# Example: ADMIN_IP_WHITELIST=192.168.1.100,203.0.113.45
# To disable: Leave empty or remove this line
ADMIN_IP_WHITELIST=

# Next.js
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ImageKit Configuration (for image uploads)
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
